                                   aria-label="Search">
                            <button class="btn btn-outline-light" type="submit">Buscar</button>
                        </form>
                    </div>
                </div>
            </nav>

            <!-- Contenido Principal con ancho de columna 8 -->
            <main class="col-9 p-4" role="main" aria-labelledby="main-heading">
                <h1 id="main-heading" class="visually-hidden">Contenido Principal de Registro Social</h1>
                @RenderBody()
            </main>
