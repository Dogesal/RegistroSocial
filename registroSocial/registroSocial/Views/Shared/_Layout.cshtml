    <!-- Menú de navegación fijo en la parte superior -->
    <div class="container-fluid">
        <div class="row">
            <!-- Menú de Navegación con ancho de columna 4 -->
            <nav class="col-3 navbar navbar-expand-lg navbar-dark" style="background-color: #39A6A3; min-height: 100vh;">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold" href="#">REGISTRO SOCIAL</a>
                    <button class="navbar-toggler"
                            type="button">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse " id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex justify-content-between w-100">
                            <li class="nav-item">
                                @Html.ActionLink("Registro Social", "Registro", "RegistroSocial", new { area = "" }, new { @class = "nav-link" })
